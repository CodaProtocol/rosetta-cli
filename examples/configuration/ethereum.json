{
 "network": {
  "blockchain": "Ethereum",
  "network": "Ropsten"
 },
 "online_url": "",
 "data_directory": "",
 "http_timeout": 300,
 "retry_elapsed_time": 0,
 "sync_concurrency": 0,
 "transaction_concurrency": 0,
 "tip_delay": 60,
 "disable_memory_limit": false,
 "log_configuration": false,
 "construction": {
  "offline_url": "",
  "stale_depth": 0,
  "broadcast_limit": 0,
  "ignore_broadcast_failures": false,
  "clear_broadcasts": false,
  "broadcast_behind_tip": false,
  "block_broadcast_limit": 0,
  "rebroadcast_all": false,
  "prefunded_accounts": null,
  "workflows": [
   {
    "name": "request_funds",
    "concurrency": 1,
    "scenarios": [
     {
      "name": "find_address",
      "actions": [
       {
        "input": "{\"symbol\":\"ETH\", \"decimals\":18}",
        "type": "set_variable",
        "output_path": "currency"
       },
       {
        "input": "{\"minimum_balance\":{\"value\": \"0\", \"currency\": {{currency}}}, \"create\":1}",
        "type": "find_balance",
        "output_path": "random_address"
       }
      ]
     },
     {
      "name": "request",
      "actions": [
       {
        "input": "{\"address\": {{random_address.account.address}}, \"minimum_balance\":{\"value\": \"10000000000000000\", \"currency\": {{currency}}}}",
        "type": "find_balance",
        "output_path": "loaded_address"
       }
      ]
     }
    ]
   },
   {
    "name": "create_account",
    "concurrency": 1,
    "scenarios": [
     {
      "name": "create_account",
      "actions": [
       {
        "input": "{\"network\":\"Ropsten\", \"blockchain\":\"Ethereum\"}",
        "type": "set_variable",
        "output_path": "network"
       },
       {
        "input": "{\"curve_type\": \"secp256k1\"}",
        "type": "generate_key",
        "output_path": "key"
       },
       {
        "input": "{\"network_identifier\": {{network}}, \"public_key\": {{key.public_key}}}",
        "type": "derive",
        "output_path": "address"
       },
       {
        "input": "{\"address\": {{address.address}}, \"keypair\": {{key}}}",
        "type": "save_address"
       }
      ]
     }
    ]
   },
   {
    "name": "transfer",
    "concurrency": 1,
    "scenarios": [
     {
      "name": "transfer",
      "actions": [
       {
        "input": "{\"network\":\"Ropsten\", \"blockchain\":\"Ethereum\"}",
        "type": "set_variable",
        "output_path": "transfer.network"
       },
       {
        "input": "{\"symbol\":\"ETH\", \"decimals\":18}",
        "type": "set_variable",
        "output_path": "currency"
       },
       {
        "input": "{\"minimum_balance\":{\"value\": \"10000000000000000\", \"currency\": {{currency}}}, \"create\": 100}",
        "type": "find_balance",
        "output_path": "sender"
       },
       {
        "input": "\"42000000000000\"",
        "type": "set_variable",
        "output_path": "max_fee"
       },
       {
        "input": "{\"operation\":\"subtraction\", \"left_value\": {{max_fee}}, \"right_value\":{{sender.balance.value}}}",
        "type": "math",
        "output_path": "sender_amount"
       },
       {
        "input": "{\"operation\":\"subtraction\", \"left_value\": \"0\", \"right_value\":{{sender_amount}}}",
        "type": "math",
        "output_path": "recipient_amount"
       },
       {
        "input": "{\"not_address\":[{{sender.account.address}}], \"minimum_balance\":{\"value\": \"0\", \"currency\": {{currency}}}, \"create\": 100}",
        "type": "find_balance",
        "output_path": "recipient"
       },
       {
        "input": "\"1\"",
        "type": "set_variable",
        "output_path": "transfer.confirmation_depth"
       },
       {
        "input": "[{\"operation_identifier\":{\"index\":0},\"type\":\"transfer\",\"account\":{\"address\":{{sender.account.address}}},\"amount\":{\"value\":{{sender_amount}},\"currency\":{{currency}}}},{\"operation_identifier\":{\"index\":1},\"type\":\"transfer\",\"account\":{\"address\":{{recipient.account.address}}},\"amount\":{\"value\":{{recipient_amount}},\"currency\":{{currency}}}}]",
        "type": "set_variable",
        "output_path": "transfer.operations"
       }
      ]
     },
     {
      "name": "print_transaction",
      "actions": [
       {
        "input": "{{transfer.transaction}}",
        "type": "print_message"
       }
      ]
     }
    ]
   }
  ]
 },
 "data": null
}
